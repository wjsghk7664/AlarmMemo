<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="16dp">

    <ImageView
        android:id="@+id/sample_iv_memo_thumbnail"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:background="@drawable/memo_thumbnail_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/sample_iv_date_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/calendar"
        app:layout_constraintStart_toStartOf="@id/sample_iv_memo_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/sample_iv_memo_thumbnail"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/sample_tv_memo_title"
        style="@style/subtitle_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/memoList_tv_sample_title"
        app:layout_constraintStart_toEndOf="@id/sample_iv_date_icon"
        app:layout_constraintTop_toBottomOf="@id/sample_iv_memo_thumbnail" />

    <TextView
        android:id="@+id/sample_tv_memo_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/memoList_tv_sample_date"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/sample_iv_date_icon"
        app:layout_constraintTop_toBottomOf="@id/sample_tv_memo_title" />

</androidx.constraintlayout.widget.ConstraintLayout>