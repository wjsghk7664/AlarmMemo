<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_corner_box"
    android:padding="16dp"
    android:gravity="center">

    <com.skydoves.colorpickerview.ColorPickerView
        android:id="@+id/colorpicker_cv"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:actionMode="last"
        android:layout_marginBottom="36dp"/>

    <com.skydoves.colorpickerview.sliders.AlphaSlideBar
        android:id="@+id/colorpicker_alphaSlideBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:selector_AlphaSlideBar="@drawable/colorpickerview_wheel"
        app:borderColor_AlphaSlideBar="@android:color/darker_gray"
        app:borderSize_AlphaSlideBar="5"/>
    <com.skydoves.colorpickerview.sliders.BrightnessSlideBar
        android:id="@+id/colorpicker_brightnessSlide"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:selector_BrightnessSlider="@drawable/colorpickerview_wheel"
        app:borderColor_BrightnessSlider="@android:color/darker_gray"
        app:borderSize_BrightnessSlider="5"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginVertical="24dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:background="@drawable/light_gray_circle">
            <ImageView
                android:id="@+id/colorpicker_iv_selected_color"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/light_gray_circle" />
        </LinearLayout>


        <View
            android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="@color/light_gray"/>

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingHorizontal="16dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color4"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color5"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color6"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color7"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color8"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="8dp"
                    android:gravity="center"
                    android:background="@drawable/light_gray_circle">
                    <ImageView
                        android:id="@+id/colorpicker_iv_saved_color9"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/light_gray_circle" />
                </LinearLayout>



            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>


</LinearLayout>