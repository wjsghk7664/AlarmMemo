                    android:background="@color/light_gray"
                    app:layout_constraintStart_toEndOf="@+id/memo_tv_time_setting"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/memo_et_timesetting"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/border_box"
                    android:gravity="right"
                    android:maxLength="5"
                    android:hint="반복 간격"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:padding="4dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/memo_vertical_divider1"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/memo_tv_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:paddingVertical="4dp"
                    android:text="분"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/memo_et_timesetting"
                    app:layout_constraintStart_toEndOf="@+id/memo_et_timesetting" />

                <View
                    android:id="@+id/memo_vertical_divider2"
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/light_gray"
                    app:layout_constraintStart_toEndOf="@+id/memo_tv_min"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/memo_et_numsetting"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/border_box"
                    android:gravity="right"
                    android:maxLength="5"
                    android:hint="반복 횟수"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:padding="4dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/memo_vertical_divider2"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/memo_tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:paddingVertical="4dp"
                    android:text="번"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/memo_et_numsetting"
                    app:layout_constraintStart_toEndOf="@+id/memo_et_numsetting" />

