<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    tools:context="com.team5.alarmmemo.presentation.memo.MemoActivity">

    <LinearLayout
        android:paddingHorizontal="4dp"
        android:gravity="center_vertical"
        android:id="@+id/memo_ll_title_container"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/basic_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/memo_iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_arrow_back" />


        <EditText
            android:id="@+id/memo_et_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:maxLines="1"
            android:ellipsize="end"
            style="@style/headline_700"
            android:hint="제목" />

        <ImageView
            android:id="@+id/memo_iv_addBitmap"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/memo_iv_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_delete" />
    </LinearLayout>

    <View
        android:id="@+id/memo_v_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memo_ll_title_container" />

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/memo_ml_alarm_container"
        app:layoutDescription="@xml/memo_motion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memo_v_divider1">

        <LinearLayout
            android:id="@+id/memo_ll_alarm_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/basic_background"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/memo_cb_alarm_on"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/checkbox_selector"
                        android:button="@null" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:text="알림 설정" />
                </LinearLayout>


                <Spinner
                    android:id="@+id/memo_sp_setting_category"
                    style="@style/Widget.Custom.Spinner.Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/memo_tv_setting_save"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="알림 설정 저장"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/light_gray_corner_box_selector"
                    android:padding="4dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/memo_cl_additional_alarm_setting_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="24dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/memo_cb_reminder_time"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null"
                    app:layout_constraintEnd_toStartOf="@+id/memo_tv_time_setting"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/memo_tv_time_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:text="시간 반복"
                    app:layout_constraintStart_toEndOf="@+id/memo_cb_reminder_time"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/memo_vertical_divider1"
