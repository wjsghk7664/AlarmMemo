<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AlarmMemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- 기본 폰트 설정 -->
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="Theme.AlarmMemo" parent="Base.Theme.AlarmMemo" />

    <style name="Widget.Custom.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="Widget.Custom.Spinner.Category" parent="Widget.AppCompat.Spinner">

        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="AlertDialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="dialog.transparentDim" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>